<resources>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/title_color_red</item>
        <!--主要风格颜色-->
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!--首页继承这个style，目的是为了让第一次进入的画面为透明-->
    <style name="AppThemeForRedMain" parent="AppTheme">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowAnimationStyle">@style/AnimActivityTheme</item>
    </style>

    <!--默认横线-->
    <style name="default_hour_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/default_hour_height</item>
        <item name="android:background">@color/default_gray</item>
    </style>

    <!--默认竖线-->
    <style name="default_ver_view">
        <item name="android:layout_width">@dimen/default_hour_height</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/default_gray</item>
    </style>

    <style name="FeelyouWindowAnimTheme" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/in_from_left</item>
        <item name="android:activityOpenExitAnimation">@anim/out_from_right</item>
        <item name="android:activityCloseEnterAnimation">@anim/in_from_right</item>
        <item name="android:activityCloseExitAnimation">@anim/out_from_left</item>
    </style>

    <!--activity的进入动画-->
    <style name="AnimActivityTheme">
        <item name="android:windowAnimationStyle">@style/FeelyouWindowAnimTheme</item>
    </style>

    <!--提示框确定按钮样式-->
    <style name="ok_button">
        <item name="android:textColor">@color/dialog_ok_color</item>
        <item name="android:textSize">@dimen/text_size_xxxx</item>
        <item name="android:background">@drawable/bg_ok_btn</item>
    </style>

    <!--提示框取消按钮样式-->
    <style name="cancel_button">
        <item name="android:textColor">@color/dialog_cancel_color</item>
        <item name="android:textSize">@dimen/text_size_xxxx</item>
        <item name="android:background">@drawable/bg_cancel_btn</item>
    </style>

    <!--默认textview设置-->
    <style name="default_textview_style">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_margin">@dimen/padding_and_margin</item>
        <item name="android:padding">@dimen/padding_and_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_default_text</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size_x</item>
    </style>

    <!--自定义dialog的style-->
    <style name="dialog" parent="android:style/Theme.Dialog">
        <!--边框-->
        <item name="android:windowFrame">@null</item>
        <!--背景颜色及透明程度-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--是否有标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--设置textview的style-->
    <style name="setting_textview_style">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">@dimen/padding_and_margin_x</item>
        <item name="android:padding">@dimen/padding_and_margin_x</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_default_click</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size_xxxx</item>
    </style>

    <style name="layout_ww" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="layout_mm" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="layout_mw" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="layout_wm" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="btn_main_type" parent="layout_ww">
        <item name="android:layout_height">@dimen/default_button_height_main</item>
        <item name="android:background">@drawable/bg_main_btn</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/default_text_size_main</item>
    </style>

    <style name="btn_main_red_type" parent="layout_ww">
        <item name="android:layout_height">@dimen/default_button_height_main_red</item>
        <item name="android:background">@drawable/bg_main_btn_red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/padding_and_margin_x</item>
        <item name="android:textSize">@dimen/default_text_size_main_red</item>
    </style>

    <style name="btn_main_red_long_type" parent="layout_mw">
        <item name="android:layout_height">@dimen/default_button_height_main_red</item>
        <item name="android:background">@drawable/bg_main_btn_red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/default_text_size_main_red</item>
        <item name="android:layout_margin">@dimen/padding_and_margin_x</item>
    </style>

    <style name="btn_main_white_type" parent="layout_ww">
        <item name="android:layout_height">@dimen/default_button_height_main_white</item>
        <item name="android:background">@drawable/bg_main_btn_white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/default_text_size_main_white</item>
    </style>

    <!--用户中心头按钮-->
    <style name="btn_user_center_type" parent="layout_ww">
        <item name="android:background">@drawable/bg_btn_user_center_header</item>
        <item name="android:textColor">@color/mall_main</item>
        <item name="android:textSize">@dimen/text_size_xx</item>
        <item name="android:layout_weight">1.0</item>
    </style>


    <!--用户中心订单按钮-->
    <style name="fl_user_center_order" parent="layout_ww">
        <item name="android:layout_weight">1.0</item>
        <item name="android:background">@drawable/bg_default_mall_white</item>
        <item name="android:padding">@dimen/padding_and_margin</item>
    </style>

    <!--订单字体-->
    <style name="text_order_type" parent="layout_ww">
        <item name="android:textSize">@dimen/text_size_xx</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_shape_circular_count" parent="layout_ww">
        <item name="android:layout_width">@dimen/text_order_untreated_size</item>
        <item name="android:layout_height">@dimen/text_order_untreated_size</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_shape_circular</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_marginRight">@dimen/padding_and_margin_x</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="bg_user_center_layout_button" parent="layout_mw">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/bg_default_mall_white</item>
        <item name="android:padding">@dimen/padding_and_margin_xx</item>
    </style>

    <style name="ic_user_center_mark" parent="layout_ww">
        <item name="android:layout_width">@dimen/index_bottom_tab_image_width</item>
        <item name="android:layout_height">@dimen/index_bottom_tab_image_height</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="tv_user_center_options" parent="layout_ww">
        <item name="android:layout_marginLeft">@dimen/padding_and_margin</item>
        <item name="android:textColor">@color/mall_text_color</item>
        <item name="android:textSize">@dimen/text_size_xx</item>
    </style>

    <style name="ic_user_center_options_more" parent="layout_ww">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/ic_more</item>
    </style>

    <!--用户登录输入框-->
    <style name="user_center_username_exit_style" parent="layout_mw">
        <item name="android:layout_marginTop">@dimen/padding_and_margin_x</item>
        <item name="android:background">@drawable/shape_general_input_box</item>
        <item name="android:paddingRight">@dimen/padding_and_margin</item>
        <item name="android:paddingTop">@dimen/padding_and_margin</item>
        <item name="android:paddingBottom">@dimen/padding_and_margin</item>
        <item name="android:paddingLeft">@dimen/padding_and_margin_x</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:drawablePadding">@dimen/padding_and_margin</item>
        <item name="android:textSize">@dimen/text_size_xxx</item>
        <item name="android:singleLine">true</item>
    </style>
    <!--验证码输入框-->
    <style name="et_user_center_general_tel" parent="user_center_username_exit_style">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:drawablePadding">@dimen/padding_and_margin</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">12</item>
    </style>
    <!--密码输入框-->
    <style name="user_center_userpwd_exit_style" parent="user_center_username_exit_style">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:background">@null</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <!--登录按钮-->
    <style name="btn_user_center_login" parent="layout_mw">
        <item name="android:background">@drawable/bg_btn_user_center_login</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_xxx</item>
        <item name="android:layout_marginTop">@dimen/padding_and_margin_x</item>
    </style>
    <!--注册-->
    <style name="tv_general_clickable" parent="layout_ww">
        <item name="android:textColor">@color/selector_general_text_pressed</item>
        <item name="android:padding">@dimen/padding_and_margin_x</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_xxx</item>
    </style>
    <!--三方登录-->
    <style name="user_login_oauth_style" parent="layout_ww">
        <item name="android:background">@drawable/bg_default_click</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:padding">@dimen/padding_and_margin_xxx</item>
    </style>

    <!--流布局-->
    <declare-styleable name="FlowLayout">
        <attr name="horizontal_spacing" format="dimension" />
        <attr name="vertical_spacing" format="dimension" />
    </declare-styleable>

    <!--选择商品或者店铺popupwindow动画-->
    <style name="AnimationPreviewForCommodityPop">
        <item name="android:windowEnterAnimation">@anim/abc_slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/abc_slide_out_bottom</item>
    </style>

    <!--星级评价-->
    <style name="custom_rating_bar_style" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/layer_list_custom_rating_bar</item>
        <item name="android:numStars">5</item>
        <item name="android:isIndicator">true</item>
        <item name="android:maxHeight">20dp</item>
        <item name="android:minHeight">20dp</item>
    </style>

    <!---->
    <style name="general_tab_text_style" parent="layout_wm">
        <item name="android:padding">@dimen/padding_and_margin_xx</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:textColor">@color/bg_goods_tab_text</item>
        <item name="android:textSize">@dimen/text_size_xx</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
    </style>

    <style name="general_tab_text_style2" parent="layout_ww">
        <item name="android:textColor">@color/bg_goods_tab_text</item>
        <item name="android:textSize">@dimen/text_size_xx</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="tv_commodity_name" parent="layout_ww">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">@dimen/text_size_x</item>
        <item name="android:textColor">@color/mall_text_color</item>
    </style>

    <style name="line_light_gray_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.1dp</item>
        <item name="android:background">@color/mall_gray</item>
    </style>

</resources>
